<h1>Create a new Portfolio item</h1>

<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <ul>
  <!-- This is type of connection in rails forms and its inheriting from "form_with" method. It gives the ability to create nested forms and have nested attributes for forms -->
    <%= form.fields_for :technologies do |technology_form| %>
    <li>
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name %>
    </li>
    <% end -%>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
